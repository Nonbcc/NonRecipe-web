<%- include("../partials/header.ejs") %> 
<div class="container">
<h1>Edit your ingredient</h1>
<form action="/ingredients/<%= ingredient._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
<div class="mb-3">
    <label class="form-label">Ingredient</label>
    <input type="text" class="form-control" name="ingredient[ingredient_name]" placeholder="<%= ingredient.ingredient_name %>", value="<%= ingredient.ingredient_name %>">
</div>
<div class="mb-3">
    <label class="form-label">Image</label>
    <img src="<%= ingredient.image %>" height="300px">
    <input type="file" class="form-control" name="image" accept="image/*">
</div>
<button type="submit" class="btn btn-primary">Submit</button>
<a href="/ingredients">Go back</a>
</form>
</div>

<%- include("../partials/footer.ejs") %> 