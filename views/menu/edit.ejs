<%- include("../partials/header.ejs") %> 
<div class="container">
<h1>Edit your recipe</h1>
<form action="/menus/<%= menu._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
<div class="mb-3">
    <label class="form-label">Recipe</label>
    <input type="text" class="form-control" name="menu[menu_name]" placeholder="<%= menu.menu_name %>", value="<%= menu.menu_name %>">
</div>
<div class="mb-3">
    <label class="form-label">Description</label>
    <input type="text" class="form-control" name="menu[description]" placeholder="<%= menu.description %>", value="<%= menu.description %>">
</div>
<div class="mb-3">
    <label class="form-label">Image</label>
    <img src="<%= menu.image %>" height="300px">
    <input type="file" class="form-control" name="image" accept="image/*">
</div>
<button type="submit" class="btn btn-primary">Submit</button>
<a href="/menus">Go back</a>
</form>
</div>

<%- include("../partials/footer.ejs") %> 