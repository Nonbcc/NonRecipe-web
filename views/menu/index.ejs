<%- include("../partials/header.ejs") %> 
<section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Welcome to NonRecipes</h1>
        <p class="lead text-muted">Find and share everyday cooking inspiration on Allrecipes. Discover recipes, cooks, videos, and how-tos based on the food you love and the friends you follow.</p>
        <p>
          <a href="/menus/new" class="btn btn-primary my-2">Add new recipe</a>
        </p>
      </div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% menus.forEach(function (menus) { %> 
        <div class="col">
          <div class="card shadow-sm">
            <img src="<%= menus.image %>" height="300px" class="index-image">
            <div class="card-body">
              <p class="card-text">Recipe: <%= menus.menu_name %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="/menus/<%= menus._id %> " class="btn btn-sm btn-outline-secondary">View</a>
                  <!-- <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button> -->
                </div>
              </div>
            </div>
          </div>
        </div>
        <% }) %> 
      </div>
    </div>
  </div>


<%- include("../partials/footer.ejs") %> 